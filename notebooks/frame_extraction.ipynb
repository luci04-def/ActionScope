# Day 3: Frame Extraction and Temporal Sampling

import cv2
import numpy as np

# -----------------------------
# Step 1: Video Path
# -----------------------------
# Update this path when running in Colab or locally
video_path = "/content/v_Archery_g01_c02.avi"

cap = cv2.VideoCapture(video_path)
print("Video opened:", cap.isOpened())

# -----------------------------
# Step 2: Video Properties
# -----------------------------
total_frames = int(cap.get(cv2.CAP_PROP_FRAME_COUNT))
fps = cap.get(cv2.CAP_PROP_FPS)

print("Total frames:", total_frames)
print("FPS:", fps)

# -----------------------------
# Step 3: Number of Frames to Sample
# -----------------------------
NUM_FRAMES = 16

# Evenly spaced frame indices
frame_indices = set(
    np.linspace(0, total_frames - 1, NUM_FRAMES, dtype=int)
)

# -----------------------------
# Step 4: Extract Frames
# -----------------------------
frames = []
current_frame = 0

while cap.isOpened():
    ret, frame = cap.read()
    if not ret:
        break

    if current_frame in frame_indices:
        frame = cv2.resize(frame, (112, 112))
        frames.append(frame)

    current_frame += 1

cap.release()

# -----------------------------
# Step 5: Verification
# -----------------------------
print("Frames extracted:", len(frames))

if len(frames) > 0:
    print("Frame shape:", frames[0].shape)
