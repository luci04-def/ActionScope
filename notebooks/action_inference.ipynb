# Day 4: Action Inference using Pretrained Model

import torch
import torchvision
import numpy as np

# -----------------------------
# Step 1: Load Pretrained Model
# -----------------------------
model = torchvision.models.video.r3d_18(pretrained=True)
model = model.float()
model.eval()

print("Pretrained R3D-18 model loaded successfully")

# -----------------------------
# Step 2: Dummy Input (Simulation)
# -----------------------------
# Shape: (Batch, Channels, Time, Height, Width)
dummy_frames = torch.randn(1, 3, 16, 112, 112)

# -----------------------------
# Step 3: Inference
# -----------------------------
with torch.no_grad():
    outputs = model(dummy_frames)
    probabilities = torch.softmax(outputs, dim=1)

# -----------------------------
# Step 4: Prediction Output
# -----------------------------
predicted_class = probabilities.argmax(dim=1).item()
confidence = probabilities.max().item()

print("Predicted class index:", predicted_class)
print("Confidence score:", confidence)
